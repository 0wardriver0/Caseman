// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Case {
  id          Int        @id @default(autoincrement())
  title       String
  type        String
  status      String
  category    String
  suspect     String
  officer     String
  notes       String?
  description String
  evidence    Evidence[]
  mapNodes    MapNode[]
  mapEdges    MapEdge[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Evidence {
  id         Int      @id @default(autoincrement())
  filename   String
  mimetype   String
  url        String
  caseId     Int
  case       Case     @relation(fields: [caseId], references: [id])
  uploadedAt DateTime @default(now())
}

model MapNode {
  id     Int    @id @default(autoincrement())
  label  String
  x      Int
  y      Int
  caseId Int
  case   Case   @relation(fields: [caseId], references: [id])
}

model MapEdge {
  id     Int  @id @default(autoincrement())
  fromId Int
  toId   Int
  caseId Int
  case   Case @relation(fields: [caseId], references: [id])
}
